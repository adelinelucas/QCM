extends layouts/frontend

block content
    .ui.middle.aligned.center.aligned.grid
        .six.wide.column
            form.ui.large.form(method="post", action="/register")
                .ui.stacked.segment
                    +field('text', 'firstName', 'First name')
                    +field('text', 'lastName', 'Last name')
                    +field('email', 'email', 'your.email@address.tld')
                    +field('password', 'password', 'Password')
                    +field('password', 'password_confirm', 'Confirm password')
                    button(type="submit").ui.fluid.large.teal.submit.button Login

                if messageInfo
                    each message in messageInfo
                        .ui.error.message.visible
                            i.close.icon
                            .header
                                p There were some errors with your submission
                            ul.list
                                li=message
                if redirectUser
                        .ui.error.message.visible
                            i.close.icon
                            .header
                                p There were some errors with your submission
                            ul.list
                                li=redirectUser

mixin field(type, name, placeholder)
    .field
        .ui.left.icon.input
            i.icon(class=(type === 'password' ? 'lock' : 'user'))
            input(type=type, name=name, placeholder=placeholder)
